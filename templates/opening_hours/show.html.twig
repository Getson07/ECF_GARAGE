{% extends 'base.html.twig' %}

{% block title %}OpeningHours
{% endblock %}

{% block body %}
	<h1>OpeningHours</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ opening_hour.id }}</td>
			</tr>
			<tr>
				<th>Day_of_week</th>
				<td>{{ opening_hour.dayOfWeek }}</td>
			</tr>
			<tr>
				<th>Opening_time</th>
				<td>{{ opening_hour.openingTime ? opening_hour.openingTime|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Closing_time</th>
				<td>{{ opening_hour.closingTime ? opening_hour.closingTime|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Start_break_time</th>
				<td>{{ opening_hour.startBreakTime ? opening_hour.startBreakTime|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>End_of_break</th>
				<td>{{ opening_hour.endOfBreak ? opening_hour.endOfBreak|date('H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>scheduler</th>
				<td>{{ opening_hour.scheduler }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_opening_hours_index') }}">back to list</a>

	<a href="{{ path('app_opening_hours_edit', {'id': opening_hour.id}) }}">edit</a>

	{{ include('opening_hours/_delete_form.html.twig') }}
{% endblock %}
