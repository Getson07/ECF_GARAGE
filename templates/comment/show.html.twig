{% extends 'base.html.twig' %}

{% block title %}Comment
{% endblock %}

{% block body %}
	<h1>Comment</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Message</th>
				<td>{{ comment.message }}</td>
			</tr>
			<tr>
				<th>Rate</th>
				<td>{{ comment.rate }}</td>
			</tr>
			{% if is_granted('ROLE_EMPLOYE') %}
				<tr>
					{% if comment.isValidate %}
						<th>Validate</th>
						<td>
							<div class="alert alert-success">Valid√©
								{{ comment.isValidate }}</div>
						</td>
					{% else %}
						<th>Validate</th>
						<td>
							<a href="{{path('app_comment_validate', {'id' : comment.id})}}">Valider</a>
						</td>
					{% endif %}
				</tr>
			{% endif %}
		</tbody>
	</tbody>
</table>

<a href="{{ path('app_comment_index') }}">back to list</a>

<a href="{{ path('app_comment_edit', {'id': comment.id}) }}">edit</a>

