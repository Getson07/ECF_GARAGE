{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<h1>Contact index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Sender_firstname</th>
				<th>Sender_lastname</th>
				<th>Sender_email</th>
				<th>Subject</th>
				<th>Message</th>
				<th>Client</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>{{ contact.id }}</td>
					<td>{{ contact.senderFirstname }}</td>
					<td>{{ contact.senderLastname }}</td>
					<td>{{ contact.senderEmail }}</td>
					<td>{{ contact.subject }}</td>
					<td>{{ contact.message }}</td>
					<td>{{ contact.client }}</td>
					<td>
						<a href="{{ path('app_contact_show', {'id': contact.id}) }}">show</a>
						<a href="{{ path('app_contact_edit', {'id': contact.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_contact_new') }}">Create new</a>
{% endblock %}
